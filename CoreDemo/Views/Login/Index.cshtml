@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Hesabınız ile giriş yapın</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Login", "Index"))
                {
                    <div class="form-group">
                        @Html.Label("Mail Adresi")
                        @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @type = "email" })
                        <small id="emailHelp" class="form-text text-muted">Mail adresinizi hiç kimseyle paylaşmayacağız.</small>
                    </div>
                    <div class="form-group">
                        @Html.Label("Şifre")
                        @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="form-check mb-2">
                        @Html.CheckBox("Beni Hatırla")
                        @Html.Label("Beni Hatırla")
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Giriş yap</button>
                    <p><a href="/Register/Index"> Hesabınız yok mu?</a></p>
                }
            </div>
        </div>
    </div>
</section>